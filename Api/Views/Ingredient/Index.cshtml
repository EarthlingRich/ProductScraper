@using Api.Controllers

@model IngredientListViewModel

@{
    ViewData["Title"] = CommonTerms.Ingredient_Index;
}

<script type="text/javascript">
    $(function() {
        Ingredient.initIndex();
    });
</script>

<h3 class="page-title">
    @CommonTerms.Ingredient_Index
    <a class="btn btn-primary float-right" href="@Url.Action(nameof(IngredientController.Create), IngredientController.RouteName)"><i class="material-icons" aria-hidden="true">add</i></a>
</h3>
<table id="ingredient-table" class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(_ => _.Name)</th>
            <th>@Html.DisplayNameFor(_ => _.VeganType)</th>
        </tr>
    </thead>
</table>