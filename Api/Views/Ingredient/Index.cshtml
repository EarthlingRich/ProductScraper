@model IEnumerable<IngredientListViewModel>
@{
    ViewData["Title"] = "Ingrediënten";
}

<h3 class="page-title">
    Ingrediënten
    <a class="btn-floating btn-large waves-effect waves-light right" href="@Url.Action("Create", "Ingredient")"><i class="material-icons">add</i></a>
</h3>
<table class="striped">
    <thead>
        <tr>
            <th>Naam</th>
            <th>Vegan</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ingredient in Model)
        {
            <tr>
                <td><a href="@Url.Action("Update", "Ingredient", new { id = ingredient.Id })">@ingredient.Name</a></td>
                <td>@ingredient.VeganType</td>
            </tr>
        }
    </tbody>
</table>