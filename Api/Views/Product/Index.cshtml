@model IEnumerable<ProductViewModel>
@{
    ViewData["Title"] = "Producten";
}
<div class="row">
    <table class="striped">
        <thead>
            <tr>
                <th>Naam</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td><a href="@Url.Action("Edit", "Product", new { id = product.Id })">@product.Name</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>