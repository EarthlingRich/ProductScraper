@using Api.Controllers

@model IEnumerable<ProductCategoryViewModel>

@{
    ViewData["Title"] = CommonTerms.ProductCategory_Index;
}

<h3 class="page-title">
    @CommonTerms.ProductCategory_Index
    <a class="btn btn-primary float-right" href="@Url.Action(nameof(ProductCategoryController.Create), ProductCategoryController.RouteName)"><i class="material-icons" aria-hidden="true">add</i></a>
</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(_ => _.Name)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var productCategory in Model)
        {
            <tr>
                <td><a href="@Url.Action(nameof(ProductCategoryController.Update), ProductCategoryController.RouteName, new { id = productCategory.Id })">@productCategory.Name</a></td>
            </tr>
        }
    </tbody>
</table>