@using Api.Controllers

@{
    var controller = ViewContext.RouteData.Values["Controller"].ToString();
    var action = ViewContext.RouteData.Values["Action"].ToString();
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/dist/main.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="~/dist/main.js"></script>
</head>
<body>
    <header>
        <ul id="sidenav" class="sidenav sidenav-fixed">
            <li class="@(controller == HomeController.RouteName && action == nameof(HomeController.Index) ? "active" : "")"><a href="@Url.Action(nameof(HomeController.Index), HomeController.RouteName)">@CommonTerms.Home_Index</a></li>
            <li class="@(controller == WorkloadController.RouteName && action == nameof(WorkloadController.Index) ? "active" : "")"><a href="@Url.Action(nameof(WorkloadController.Index), WorkloadController.RouteName)">@CommonTerms.Product_Workload</a></li>
            <li class="@(controller == ProductController.RouteName && action == nameof(ProductController.Index) ? "active" : "")"><a href="@Url.Action(nameof(ProductController.Index), ProductController.RouteName)">@CommonTerms.Product_Index</a></li>
            <li class="@(controller == IngredientController.RouteName && action == nameof(IngredientController.Index) ? "active" : "")"><a href="@Url.Action(nameof(IngredientController.Index), IngredientController.RouteName)">@CommonTerms.Ingredient_Index</a></li>
            <li class="@(controller == ProductCategoryController.RouteName && action == nameof(ProductCategoryController.Index) ? "active" : "")"><a href="@Url.Action(nameof(ProductCategoryController.Index), ProductCategoryController.RouteName)">@CommonTerms.ProductCategory_Index</a></li>
        </ul>
        <a href="#" data-target="sidenav" class="sidenav-trigger hide-on-large-only">Menu</a>
    </header>
    <main>
        <div class="row">
            <div class="col s12 main-content">
                @RenderBody()
            </div>
        </div>
    </main>
</body>
</html>
