@{
    var controller = ViewContext.RouteData.Values["Controller"].ToString();
    var action = ViewContext.RouteData.Values["Action"].ToString();
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="~/dist/main.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <script src="~/dist/main.js"></script>
</head>
<body>
    <header>
        <ul id="sidenav" class="sidenav sidenav-fixed">
            <li class="@(controller == "Home" && action == "Index" ? "active" : "")"><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li class="@(controller == "Product" && action == "Workload" ? "active" : "")"><a href="@Url.Action("Workload", "Product")">Werklijst</a></li>
            <li class="@(controller == "Product" && action == "Index" ? "active" : "")"><a href="@Url.Action("Index", "Product")">Producten</a></li>
            <li class="@(controller == "Ingredient" && action == "Index" ? "active" : "")"><a href="@Url.Action("Index", "Ingredient")">Ingrediënten</a></li>
        </ul>
        <a href="#" data-target="sidenav" class="sidenav-trigger hide-on-large-only">Menu</a>
    </header>
    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>
</body>
</html>
